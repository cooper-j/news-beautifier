<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.cooperj.newsbeautifier">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.github.cooperj.newsbeautifier.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver android:name="com.github.cooperj.newsbeautifier.widget.MyAppWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/app_widget_provider" />
        </receiver>

        <service android:name="com.github.cooperj.newsbeautifier.widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name="com.github.cooperj.newsbeautifier.activities.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.cooperj.newsbeautifier.activities.HomeActivity"
            android:label="@string/title_home_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.github.cooperj.newsbeautifier.activities.ArticleActivity"
            android:launchMode="singleTask"
            android:label="@string/title_activity_article"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".activities.HomeActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY_NAME" android:value=".activities.HomeActivity"/>
        </activity>
        <activity
            android:name="com.github.cooperj.newsbeautifier.activities.WebViewActivity"
            android:label="@string/title_activity_web_view"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.github.cooperj.newsbeautifier.activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>
